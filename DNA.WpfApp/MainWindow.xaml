<Window x:Class="DNA.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DNA Fertility Treatment Management System" Height="800" Width="1200"
        WindowState="Maximized" WindowStartupLocation="CenterScreen">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="60"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="30"/>
		</Grid.RowDefinitions>

		<Border Grid.Row="0" Background="#2E86AB" Padding="10">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>

				<StackPanel Grid.Column="0" Orientation="Horizontal">
					<Image Source="Assets/dna_icon.png" Width="40" Height="40" Margin="0,0,10,0"/>
					<TextBlock Text="DNA Fertility Center" VerticalAlignment="Center" FontSize="24" FontWeight="Bold" Foreground="White"/>
				</StackPanel>

				<StackPanel Grid.Column="2" Orientation="Horizontal">
					<TextBlock x:Name="txtWelcome" Text="Welcome, User" VerticalAlignment="Center" FontSize="14" Foreground="White" Margin="0,0,15,0"/>
					<Button x:Name="btnLogout" Content="Logout" Click="BtnLogout_Click" Padding="10,5" Background="White" Foreground="#2E86AB" BorderBrush="White"/>
				</StackPanel>
			</Grid>
		</Border>

		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="250"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<Border Grid.Column="0" Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="0,0,1,0">
				<ScrollViewer>
					<StackPanel Margin="10">
						<TextBlock Text="MAIN MENU" FontWeight="Bold" FontSize="12" Foreground="#6C757D" Margin="0,0,0,10"/>

						<Button x:Name="btnDashboard" Content="ðŸ“Š Dashboard" Click="BtnDashboard_Click" Style="{StaticResource MenuButtonStyle}"/>
						<Button x:Name="btnPatients" Content="ðŸ‘¥ Patients" Click="BtnPatients_Click" Style="{StaticResource MenuButtonStyle}"/>
						<Button x:Name="btnDoctors" Content="ðŸ‘¨â€âš•ï¸ Doctors" Click="BtnDoctors_Click" Style="{StaticResource MenuButtonStyle}"/>
						<Button x:Name="btnAppointments" Content="ðŸ“… Appointments" Click="BtnAppointments_Click" Style="{StaticResource MenuButtonStyle}"/>
						<Button x:Name="btnTreatments" Content="ðŸ¥ Treatments" Click="BtnTreatments_Click" Style="{StaticResource MenuButtonStyle}"/>
						<Button x:Name="btnServices" Content="âš•ï¸ Services" Click="BtnServices_Click" Style="{StaticResource MenuButtonStyle}"/>
						<Button x:Name="btnRecords" Content="ðŸ“‹ Medical Records" Click="BtnRecords_Click" Style="{StaticResource MenuButtonStyle}"/>
						<Button x:Name="btnReports" Content="ðŸ“ˆ Reports" Click="BtnReports_Click" Style="{StaticResource MenuButtonStyle}"/>
						<Button x:Name="btnBlog" Content="ðŸ“ Blog Management" Click="BtnBlog_Click" Style="{StaticResource MenuButtonStyle}"/>
						<Button x:Name="btnSettings" Content="âš™ï¸ Settings" Click="BtnSettings_Click" Style="{StaticResource MenuButtonStyle}"/>
						<!-- Added btnUsers as it was referenced in C# -->
						<Button x:Name="btnUsers" Content="ðŸ‘¤ Users" Click="BtnUsers_Click" Style="{StaticResource MenuButtonStyle}"/>
					</StackPanel>
				</ScrollViewer>
			</Border>

			<Border Grid.Column="1" Background="White" Padding="20">
				<Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
			</Border>
		</Grid>

		<StatusBar Grid.Row="2" Background="#F8F9FA">
			<StatusBarItem>
				<TextBlock x:Name="txtStatus" Text="Ready"/>
			</StatusBarItem>
			<StatusBarItem HorizontalAlignment="Right">
				<TextBlock x:Name="txtDateTime" Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='dd/MM/yyyy HH:mm:ss'}" xmlns:sys="clr-namespace:System;assembly=mscorlib"/>
			</StatusBarItem>
		</StatusBar>
	</Grid>
</Window>
