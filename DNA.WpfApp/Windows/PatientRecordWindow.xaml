<Window x:Class="DNA.WpfApp.Windows.PatientRecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hồ sơ bệnh nhân" Height="700" Width="1000"
        WindowStartupLocation="CenterOwner" Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Hồ sơ bệnh nhân" FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <TextBlock Grid.Row="1" Text="Chức năng quản lý hồ sơ bệnh nhân đang được phát triển..." 
                   HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
        
        <Button Grid.Row="2" Content="Đóng" Click="BtnClose_Click" HorizontalAlignment="Center"/>
    </Grid>
</Window>
