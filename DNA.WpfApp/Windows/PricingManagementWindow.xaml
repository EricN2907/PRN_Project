<Window x:Class="DNA.WpfApp.Windows.PricingManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="⚙️ Quản lý bảng giá dịch vụ" Height="600" Width="900"
        WindowStartupLocation="CenterOwner" Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="⚙️ Quản lý bảng giá dịch vụ xét nghiệm ADN" FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <TextBlock Grid.Row="1" Text="Chức năng quản lý bảng giá đang được phát triển..." 
                   HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
        
        <Button Grid.Row="2" Content="Đóng" Click="BtnClose_Click" HorizontalAlignment="Center"/>
    </Grid>
</Window>
