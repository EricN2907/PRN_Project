<Window x:Class="DNA.WpfApp.Windows.DNATestResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kết quả xét nghiệm ADN" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Kết quả xét nghiệm ADN" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock Grid.Row="1" Text="Chức năng xem kết quả xét nghiệm đang được phát triển..." 
                   HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>

        <Button Grid.Row="2" Content="Đóng" Click="BtnClose_Click" 
                Style="{StaticResource SecondaryButtonStyle}" Padding="15,8" 
                HorizontalAlignment="Center"/>
    </Grid>
</Window>
