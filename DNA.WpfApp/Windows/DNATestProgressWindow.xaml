<Window x:Class="DNA.WpfApp.Windows.DNATestProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Theo dõi tiến độ xét nghiệm" Height="500" Width="700"
        WindowStartupLocation="CenterOwner" Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Theo dõi tiến độ xét nghiệm ADN" FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <TextBlock Grid.Row="1" Text="Chức năng theo dõi tiến độ đang được phát triển..." 
                   HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
        
        <Button Grid.Row="2" Content="Đóng" Click="BtnClose_Click" HorizontalAlignment="Center"/>
    </Grid>
</Window>
